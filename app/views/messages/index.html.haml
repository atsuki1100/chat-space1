= render partial: 'sideber'

.chat-main
  .chat-main__header
    .chat-main__header--group
      %p.samplegroup
        サンプルグループ
      %p.member
        Member: メンバー1,メンバー2,メンバー3
    .edit
      = link_to "Edit"
  .chat-main__contents
    .chat-main__contents--message
      .nickname
        %p.nickname__user サンプルユーザー
        %p.nickname__time 1111/11/11(sample) 11:11:11
      %p.comment コメント
    .chat-main__contents--message
      .nickname
        %p.nickname__user サンプルユーザー2
        %p.nickname__time 2222/22/22(sample) 22:22:22
      %p.comment コメント2
  .form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'form-message', placeholder: 'type a message'
        = f.label :image, class: 'image-label' do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form-submit'
